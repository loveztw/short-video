page {
  background: black;
}

.container {
  /* background: red; */
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}

.header-menu {
  background: black;
  /* position:fixed;  */
  top:0;
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
}

.header-menu text {
  color: white;
  font-weight: bold;
  line-height: 80rpx;
}

.setting-block {
  background: #303030;
  height: auto;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
}

.setting-item {
  /* background: blue; */
  height: 100rpx;
  width: 85%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.setting-item text {
  color: #B2B2B2;
  font-weight: bold;
  font-size: 32rpx;
}

.arrow {
    content: " ";
    display: inline-block;
    height: 10px;
    width: 10px;
    border-width: 2px 2px 0 0;
    border-color: #B2B2B2;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}

.btn {
  width: 100%;
  margin-top: 50rpx;
  border-radius: 0;
  font-size: 32rpx;
  color: #B2B2B2;
  background: #303030;
}