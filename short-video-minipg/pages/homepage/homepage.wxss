page {
  background: black;
}

.headerview {
  display: flex;
  height: 590rpx;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  background: gray;
}

.image-view {
  /* background: red; */
  height: 250rpx;
  width: 250rpx;
}

.image-view image {
  height: 200rpx;
  width: 200rpx;
  border: 0 solid #ff0000;
  border-radius: 100rpx;
  margin-top: 45rpx;
  margin-left: 30rpx;  
}

.btn-view {
  /* background: yellow; */
  height: 250rpx;
  width: 500rpx;
}

.btn-view button {
  width: 200rpx;
  color: white;
  background: #FF0058;
  margin-top: 105rpx;
  font-size: 15px;
  border-radius: 8rpx;
}

.nickname-view {
  /* background: blue; */
  height: 120rpx;
  width: 90%;
}

.nickname-view text {
  color: white;
  font-weight: bold;
  font-size: 20px;
  line-height: 120rpx;
}

.line {
  background: #B2B2B2;
  height: 3rpx;
  width: 90%;
}

.personality-view {
  /* background: greenyellow; */
  height: 80rpx;
  width: 90%;
}

.personality-view text {
  color: white;
  font-size: 15px;
  line-height: 80rpx;
}

.bubble-view {
  /* background: plum; */
  height: 40rpx;
  width: 90%;
  display: flex;
}

.bubble-view-text {
  background: #B2B2B2;
  font-size: 10px;
  border-radius: 20rpx;
  line-height: 40rpx;
}

.count-info-view {
  /* background: orange; */
  height: 80rpx;
  width: 90%;  
}

.count-info-view-text {
  color: white;
  font-size: 15px;
  font-weight: bold;
  line-height: 80rpx;
}
