.container {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.camera-view {
  width: 100%;
  height: 100%;
}

.header-view {
  /* background: yellow; */
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: space-between;
}

.side-item-view {
  /* background: red; */
  width: 150rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.middle-item-view {
  /* background: red; */
  width: 300rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item-view-text {
  color: white;
  font-size: 38rpx;
}
.close-img {
  width: 38rpx;
  height: 38rpx;
}

.reverse-img {
  width: 58rpx;
  height: 58rpx;
}