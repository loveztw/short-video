
<view class='searchbar-container'>
  <view class='searchbar-view'>
    <view class='search-img-view'>
      <image src='../resources/pictures/search.png'></image>
    </view>
    <view class='search-input-view'>
      <input placeholder='搜索歌曲'></input>
    </view>
  </view>
</view>
<view class='container'>
  <view class='menu-view'>
    <view class='menu-item-view'>
      <image src='../resources/pictures/hot.png'></image>
      <text>热歌榜</text>
    </view>
    <view class='menu-item-view'>
      <image src='../resources/pictures/pop.png'></image>
      <text>流行</text>
    </view>
    <view class='menu-item-view'>
      <image src='../resources/pictures/chinesestyle.png'></image>
      <text>中国风</text>    
    </view>
    <view class='menu-item-view'>
      <image src='../resources/pictures/guitar.png'></image>
      <text>民谣</text>       
    </view>
  </view>
  <view class='list-view'>
     <view class='list-view-header'>
      <view class='list-view-header-item'>
        <text>热门歌曲</text>
      </view>
      <view class='list-view-header-item'>
        <text>我的收藏</text>
      </view>
     </view> 
     <view class='list-view-body' wx:for="{{bgmList}}" wx:key="id">
        <view class='list-view-body-item' id='audio{{index}}' bindtap='showMenu'>
          <audio name="{{item.name}}" author="{{item.author}}" id="{{item.id}}" src="{{serverUrl}}{{item.url}}" bindplay='doAudioPlay' controls loop></audio> 
        </view>
        <view wx:if="{{showMenuFlg == 'audio' + index}}" class='list-view-body-item' bindtap='showMenu'>
          <button style='width: 95%' type='warn'>选择并开始拍摄</button> 
        </view>
     </view>
  </view>
</view>
