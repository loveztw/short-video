page {
  background: black;
}

.main-scroll-view {
  background: #3c3c3c;
  height: 1185rpx;
}

.header-menu {
  background: black;
  position:fixed; 
  top:0;
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
}

.header-menu-title {
  /* background: yellow; */
  height: 100%;
  width: 70%;
  color: white;
}

.header-menu-title text {
  /* color: white; */
  font-weight: bold;
  line-height: 80rpx; 
  margin-left: 280rpx;
}

.header-menu-btn {
  /* background: blue; */
  height: 100%;
  width: 20%;
}

.header-menu-btn button {
  height: 100%;
  width: 100%;
  color: white;
  background: #FF0058;
  font-size: 14px;
  border-radius: 8rpx;
}

.faceimg-view {
  background: gray;
  height: 400rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.faceimg-view image {
  height: 200rpx;
  width: 200rpx;
  border: 0 solid #ff0000;
  border-radius: 100rpx;
  margin-top: 130rpx;
  margin-left: 270rpx;  
}

.faceimg-view text {
  margin-left: 275rpx;  
  margin-top: 15rpx;
  color: #B2B2B2;
  font-size: 32rpx;
}

.input-view {
  /* background: green; */
  height: auto;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: center;
  align-content: flex-start;
}

.input-item-view {
  /* background: blue; */
  height: 100rpx;
  width: 90%;
  display: flex;
  align-items: center; 
}

.input-item-view label {
  /* background: white; */
  color: #B2B2B2;
  font-size: 33rpx;
}

.input-item-view-input {
  /* background: white; */
  margin-left: 30rpx;
  width: 84%;
  color: white;
  font-weight: bold;
  font-size: 34rpx;
}

.input-item-textarea-view {
  /* background: blue; */
  height: 100%;
  width: 90%;
  display: flex;
  align-items: flex-start;
  margin-top: 30rpx; 
}

.input-item-textarea-view label {
  /* background: white; */
  color: #B2B2B2;
  font-size: 33rpx;
}